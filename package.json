{
  "name": "api",
  "version": "0.0.1",
  "description": "API and Orchestrator for Dollar GPU Club",
  "main": "index.js",
  "repository": "ssh://git@github.com/dollar-gpu-club/api.git",
  "author": "Colin King <me@colinking.co>",
  "private": true,
  "scripts": {
    "start": "node dist",
    "prestart": "npm run build",
    "lint": "eslint src; exit 0",
    "lint:fix": "eslint src --fix; exit 0",
    "build": "rimraf dist && babel src -D --out-dir dist",
    "format:md": "prettier --parser markdown --write '*.md'",
    "format:yml": "prettier --parser yaml --single-quote --write '*.{yml,yaml}'",
    "format:code": "prettier --single-quote --print-width 120 --write 'src/**/*.js' 'test/**/*.js'",
    "start:dev": "nodemon --watch .env --watch src --watch data --exec babel-node src --source-maps",
    "logs": "heroku logs -a dollar-gpu-club-api --tail"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "prettier": "^1.14.3"
  },
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "aws-sdk": "^2.329.0",
    "body-parser": "^1.18.3",
    "celebrate": "^8.0.2",
    "express": "^4.16.3",
    "express-promise-router": "^3.0.3",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "node-cron": "^2.0.1",
    "rimraf": "^2.6.1",
    "uuid": "^3.3.2"
  }
}
